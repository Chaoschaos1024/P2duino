con { timing }

  CLK_FREQ = 200_000_000                                        ' system freq as a constant
  MS_001   = CLK_FREQ / 1_000                                   ' ticks in 1ms
  US_001   = CLK_FREQ / 1_000_000                               ' ticks in 1us

  BR_TERM  = 115_200                                            ' terminal baud rate

  _clkfreq = CLK_FREQ                                           ' set system clock


con { fixed io pins }

  RX1      = 63  { I }                                          ' programming / debug
  TX1      = 62  { O }                                           
                                                                 
  SF_CS    = 61  { O }                                          ' serial flash
  SF_SCK   = 60  { O }                                           
  SF_SDO   = 59  { O }                                           
  SF_SDI   = 58  { I }                                           
                                                                 
  SD_SCK   = 61  { O }                                          ' sd card
  SD_CS    = 60  { O }                                           
  SD_SDI   = 59  { O }                                           
  SD_SDO   = 58  { I }                                           
                                                                 
  SDA1     = 57  { IO }                                         ' i2c (optional)
  SCL1     = 56  { IO }                                          
                                                                 

con { app io pins }

  IR_SENSE = 24  { I }                                          ' ir sensor


con

  #true,  ON, OFF 
  #false, NO, YES

  
obj

' main                                                          ' * master Spin cog
  ir   : "jm_sircs_rx"                                          ' * SIRCS decoding
  term : "jm_serial"                                            '   serial IO for terminal    

' * uses cog when loaded


dat

  Banner        byte      "=====================", 13        
                byte      " P2 SIRCS Input Demo ", 13
                byte      "=====================", 13
                byte      13, 0


var
                                                       
          
pub main() | code, bits, ext, device, cmd                                                         
                                                                 
  setup()

  wait_for_terminal(true)

  term.str(@Banner)

  if (ir.sensor_check())
    term.str(string("Sensor detected", 13, 13))
  else
    term.str(string("Error: No sensor"))
    repeat                                                      ' hold if no sensor
      waitct(0)      

  repeat
    ir.enable()
    code, bits := ir.rx()                                       ' wait for input

    ext, device, cmd := code.[19..12], code.[11..7], code.[6..0]
    
    term.fstr1(string("%2d : "), bits)
    case bits
      12    : term.fstr2(string("%14.5b %.7b  "), device, cmd) 
      15    : term.fstr2(string("%14.8b %.7b  "), device, cmd)               
      20    : term.fstr3(string("%.8b %.5b %.7b  "), ext, device, cmd)     
      other : term.fbin(code, 32)
      
    if (device == 1)                                            ' TV?
      show_key_name(@TVkeys, cmd)

    term.tx(13)
    waitms(250)                                                 ' minimize repeats


pub show_key_name(p_str, key) | keycode

'' Print string associated with key
'' -- p_str is pointer to list of key values and names (z-strings)
'' -- key is the key to to search

  repeat
    keycode := byte[p_str++]                                        
    if (keycode == key)
      term.str(p_str)
      quit
    elseif (keycode == $FF)                                     ' end of list
      quit
    else
      p_str += strsize(p_str) + 1                               ' skip name to next code  


